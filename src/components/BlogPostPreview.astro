---
interface Props {
  title: string;
  description: string;
  pubDate: Date;
  url: string;
  heroImage?: string;
}

const { title, description, pubDate, url, heroImage } = Astro.props;

const formattedDate = pubDate.toLocaleDateString('en-us', {
  year: 'numeric',
  month: 'short',
  day: 'numeric',
});
---

<div class="post-preview">
  {heroImage && (
    <a href={url} class="image-link">
      <img src={import.meta.env.BASE_URL + '/' + heroImage.replace(/^\//, '')} alt={title} />
    </a>
  )}
  <div class="content">
    <div class="meta">
      <time datetime={pubDate.toISOString()}>{formattedDate}</time>
    </div>
    <h2 class="title"><a href={url}>{title}</a></h2>
    <p class="description">{description}</p>
    <a href={url} class="read-more">Read more â†’</a>
  </div>
</div>

<style>
  .post-preview {
    margin-bottom: 2.5rem;
    border-bottom: 1px solid #eee;
    padding-bottom: 2.5rem;
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }
  
  @media (min-width: 768px) {
    .post-preview {
      grid-template-columns: 200px 1fr;
    }
  }
  
  .image-link {
    display: block;
  }
  
  .post-preview img {
    width: 100%;
    height: 150px;
    object-fit: cover;
    border-radius: 0.375rem;
  }
  
  .meta {
    color: #666;
    font-size: 0.875rem;
    margin-bottom: 0.5rem;
  }
  
  .title {
    margin: 0 0 0.75rem 0;
    font-size: 1.5rem;
    line-height: 1.3;
  }
  
  .title a {
    color: var(--color-secondary);
    text-decoration: none;
  }
  
  .title a:hover {
    color: var(--color-primary);
  }
  
  .description {
    margin-bottom: 1rem;
  }
  
  .read-more {
    font-weight: 500;
    text-decoration: none;
  }
  
  .read-more:hover {
    text-decoration: underline;
  }
</style>