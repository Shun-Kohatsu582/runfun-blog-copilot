---
import MainLayout from "../layouts/MainLayout.astro";
import { t } from "../utils/i18n";
import i18next from "i18next";
---

<MainLayout title={t("common.title")} isHomePage={true}>
  <!-- Logo Section -->
  <section class="logo-section">
    <div class="container">
      <img src="/images/runfun-logo.svg" alt="RunFun Logo" class="logo-image" />
    </div>
  </section>

  <!-- Service Section -->
  <section class="service-section">
    <div class="container">
      <h2>SERVICE</h2>
      
      <div class="service-items">
        <p>ホームページ制作・リニューアル</p>
        <p>CMS構築（Wordpress・Movable Type）</p>
        <p>LP作成</p>
        <p>ホームページ運用保守</p>
        <p>etc...</p>
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section class="about-section">
    <div class="container">
      <h2>ABOUT</h2>
      
      <div class="about-content">
        <p>「RunFun」と書いて「るんふぁん」</p>
        
        <div class="engineer-info">
          <h3>WEB ENGINEER</h3>
          <p class="engineer-name">小波津 駿</p>
          <p class="engineer-name-en">KOHATSU SHUN</p>
          
          <p class="engineer-location">沖縄県にてフリーのWEBエンジニアとして活動中</p>
          <p>WEB制作全般承ります</p>
        </div>
      </div>
    </div>
  </section>
</MainLayout>

<style>
  .logo-section {
    padding: 4rem 0;
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
  }
  
  .logo-image {
    max-width: 100%;
    height: auto;
    max-height: 200px;
  }
  
  .service-section {
    background-color: var(--service-blue);
    padding: 4rem 0;
    text-align: center;
    color: white;
  }
  
  .service-section h2 {
    font-size: 2rem;
    margin-bottom: 2rem;
  }
  
  .service-items {
    max-width: 600px;
    margin: 0 auto;
  }
  
  .service-items p {
    margin-bottom: 1rem;
    font-size: 1.1rem;
  }
  
  .about-section {
    padding: 4rem 0;
    text-align: center;
  }
  
  .about-section h2 {
    font-size: 2rem;
    margin-bottom: 2rem;
  }
  
  .about-content {
    max-width: 600px;
    margin: 0 auto;
  }
  
  .engineer-info {
    margin-top: 3rem;
  }
  
  .engineer-info h3 {
    margin-bottom: 1.5rem;
    font-size: 1.3rem;
  }
  
  .engineer-name {
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
  }
  
  .engineer-name-en {
    margin-bottom: 2rem;
  }
  
  .engineer-location {
    margin-bottom: 0.5rem;
  }
</style>