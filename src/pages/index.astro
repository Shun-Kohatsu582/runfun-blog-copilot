---
import MainLayout from "../layouts/MainLayout.astro";
import { t } from "../utils/i18n";
import i18next from "i18next";
---

<MainLayout title={t("common.title")} isHomePage={true}>
  <div class="fullscreen-container">
    <!-- Logo Section -->
    <section class="logo-section fullscreen-section">
      <div class="container">
        <img src={import.meta.env.BASE_URL + 'images/runfun-logo.svg'} alt="RunFun Logo" class="logo-image" />
      </div>
    </section>

    <!-- Service Section -->
    <section class="service-section fullscreen-section">
      <div class="container">
        <h2>SERVICE</h2>
        
        <div class="service-items">
          <p>ホームページ制作・リニューアル</p>
          <p>CMS構築（Wordpress・Movable Type）</p>
          <p>LP作成</p>
          <p>ホームページ運用保守</p>
          <p>etc...</p>
        </div>
      </div>
    </section>

    <!-- About Section -->
    <section class="about-section fullscreen-section">
      <div class="container">
        <h2>ABOUT</h2>
        
        <div class="about-content">
          <p>「RunFun」と書いて「るんふぁん」</p>
          
          <div class="engineer-info">
            <h3>WEB ENGINEER</h3>
            <p class="engineer-name">小波津 駿</p>
            <p class="engineer-name-en">KOHATSU SHUN</p>
            
            <p class="engineer-location">沖縄県にてフリーのWEBエンジニアとして活動中</p>
            <p>WEB制作全般承ります</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Blog Link Section -->
    <section class="blog-link-section fullscreen-section">
      <div class="container">
        <h2>BLOG</h2>
        <p>技術ブログやお役立ち情報を更新しています</p>
        <a href="/blog" class="blog-button">ブログを見る</a>
      </div>
      
      <!-- Footer within last section -->
      <footer class="home-footer">
        <div class="container">
          <p class="footer-copyright">&copy; {new Date().getFullYear()} RunFun Blog. {t("common.copyright")}</p>
          <p class="footer-credit">Designed with passion by 小波津 駿.</p>
        </div>
      </footer>
    </section>
  </div>
</MainLayout>

<style>
  /* Full-screen container for scroll-snap */
  .fullscreen-container {
    height: 100vh;
    overflow-y: auto;
    scroll-snap-type: y mandatory;
    scroll-behavior: smooth;
    /* Webkit-specific optimization for iOS */
    -webkit-overflow-scrolling: touch;
    /* Prevent scroll bouncing on iOS */
    overscroll-behavior: none;
  }
  
  /* Fallback for browsers that don't support scroll-snap */
  @supports not (scroll-snap-type: y mandatory) {
    .fullscreen-container {
      /* Fallback behavior for older browsers */
      scroll-behavior: smooth;
    }
  }
  
  /* Base full-screen section styling */
  .fullscreen-section {
    height: 100vh;
    scroll-snap-align: start;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    position: relative;
  }
  
  .logo-section {
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
  }
  
  .logo-image {
    max-width: 100%;
    height: auto;
    max-height: 200px;
  }
  
  .service-section {
    background-color: var(--service-blue);
    color: white;
  }
  
  .service-section h2 {
    font-size: 2rem;
    margin-bottom: 2rem;
  }
  
  .service-items {
    max-width: 600px;
    margin: 0 auto;
  }
  
  .service-items p {
    margin-bottom: 1rem;
    font-size: 1.1rem;
  }
  
  .about-section h2 {
    font-size: 2rem;
    margin-bottom: 2rem;
  }
  
  .about-content {
    max-width: 600px;
    margin: 0 auto;
  }
  
  .engineer-info {
    margin-top: 3rem;
  }
  
  .engineer-info h3 {
    margin-bottom: 1.5rem;
    font-size: 1.3rem;
  }
  
  .engineer-name {
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
  }
  
  .engineer-name-en {
    margin-bottom: 2rem;
  }
  
  .engineer-location {
    margin-bottom: 0.5rem;
  }
  
  .blog-link-section {
    background-color: #f9f9f9;
    justify-content: space-between;
  }
  
  .blog-link-section .container {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
  
  .blog-link-section h2 {
    font-size: 2rem;
    margin-bottom: 1rem;
  }
  
  .blog-link-section p {
    margin-bottom: 2rem;
  }
  
  .blog-button {
    display: inline-block;
    background-color: var(--service-blue);
    color: white;
    padding: 0.75rem 2rem;
    border-radius: 30px;
    text-decoration: none;
    font-weight: bold;
    transition: background-color 0.3s ease;
  }
  
  .blog-button:hover {
    background-color: #3a93e6;
  }
  
  /* Footer within last section */
  .home-footer {
    background-color: #1e293b;
    color: #cbd5e1;
    padding: 2rem 0;
    width: 100%;
    text-align: center;
  }
  
  .home-footer .footer-copyright {
    font-size: 1.125rem;
    margin-bottom: 0.5rem;
  }
  
  .home-footer .footer-credit {
    font-size: 0.875rem;
  }
  
  /* Mobile adjustments */
  @media (max-width: 768px) {
    .service-section h2,
    .about-section h2,
    .blog-link-section h2 {
      font-size: 1.5rem;
    }
    
    .engineer-name {
      font-size: 1.2rem;
    }
    
    .engineer-info h3 {
      font-size: 1.1rem;
    }
    
    .service-items p {
      font-size: 1rem;
    }
    
    .about-content,
    .service-items {
      padding: 0 1rem;
    }
    
    /* Ensure content fits on smaller screens */
    .engineer-info {
      margin-top: 2rem;
    }
    
    .blog-link-section p {
      margin-bottom: 1.5rem;
    }
  }
  
  /* Extra small screens */
  @media (max-width: 480px) {
    .logo-image {
      max-height: 150px;
    }
    
    .service-section h2,
    .about-section h2,
    .blog-link-section h2 {
      font-size: 1.3rem;
      margin-bottom: 1.5rem;
    }
    
    .service-items p {
      font-size: 0.9rem;
      margin-bottom: 0.8rem;
    }
    
    .engineer-name {
      font-size: 1.1rem;
    }
    
    .home-footer {
      padding: 1.5rem 0;
    }
    
    .home-footer .footer-copyright,
    .home-footer .footer-credit {
      font-size: 0.8rem;
    }
  }
  
  /* Ensure touch scrolling works properly on mobile */
  @media (hover: none) and (pointer: coarse) {
    .fullscreen-container {
      -webkit-overflow-scrolling: touch;
      /* Better snap behavior on touch devices */
      scroll-snap-stop: always;
    }
  }
</style>