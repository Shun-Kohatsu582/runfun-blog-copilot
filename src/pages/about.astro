---
import MainLayout from "../layouts/MainLayout.astro";
import { t } from "../utils/i18n";
---

<MainLayout title={`${t("navigation.about")} | RunFun Blog`} description={`${t("navigation.about")} RunFun Blog`}>
  <h1 class="text-4xl mb-8 text-secondary">{t("about.title")}</h1>

  <div class="max-w-[700px]">
    <p class="mb-6 text-lg leading-relaxed">
      {t("about.intro")}
    </p>

    <h2 class="text-3xl mb-4 mt-8 text-secondary">{t("about.whatWeCover")}</h2>
    <ul class="mb-6 pl-6">
      <li class="mb-2 text-lg">{t("about.items.tips")}</li>
      <li class="mb-2 text-lg">{t("about.items.gear")}</li>
      <li class="mb-2 text-lg">{t("about.items.training")}</li>
      <li class="mb-2 text-lg">{t("about.items.nutrition")}</li>
      <li class="mb-2 text-lg">{t("about.items.stories")}</li>
      <li class="mb-2 text-lg">{t("about.items.activities")}</li>
    </ul>

    <h2 class="text-3xl mb-4 mt-8 text-secondary">{t("about.philosophy")}</h2>
    <p class="mb-6 text-lg leading-relaxed">
      {t("about.philosophyText")}
    </p>

    <h2 class="text-3xl mb-4 mt-8 text-secondary">{t("about.getInTouch")}</h2>
    <p class="mb-6 text-lg leading-relaxed">
      {t("about.contact")} <a href="mailto:contact@runfunblog.com" class="text-primary">contact@runfunblog.com</a>.
    </p>
  </div>
</MainLayout>
